import pygame

pygame.init()

# Afmetingen van het scherm
screen = pygame.display.set_mode((1000,600))

#Display van Titel en Icoon van Game 
pygame.display.set_caption('Space Liberators')
icon = pygame.image.load('StartScreenIcon.png')

pygame.display.set_icon(icon)
clock = pygame.time.Clock()

# Start knop op titel scherm 
test_surface = pygame.Surface((200,200))
test_surface.fill('Red')

# Game Window Loop 
running = True
while running: 
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False 
    # Kleur van het start scherm
    screen.fill((192,192,192))

    # Positie start knop 
    screen.blit(test_surface,(400,200))

    pygame.display.update()       
    clock.tick(60)